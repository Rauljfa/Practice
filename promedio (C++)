// ejemplo1.cpp: define el punto de entrada de la aplicaci√≥n de consola.
//

#include "stdafx.h"
#include <iostream>
#include <conio.h>

using namespace::std;

int _tmain(int argc, _TCHAR* argv[])
{
	cout << "Digite primera nota ";
	float a;
	cin >> a;
	cout << "Digite segunda nota ";
	float b;
	cin >> b;
	float pm;
	pm = (a + b) / 2;
	cout << "Su promedio es " << pm;
	
	if (pm >= 2.95)
	{
		cout << " Paso la materia";
	}
	else
	{
		cout << " Perdio la materia";
	}
	_getch();
	return 0;
}
